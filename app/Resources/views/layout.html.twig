<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block meta_title %}Caplogik/SemanticUIBundle{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% block styles %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
        {% endblock %}
    </head>
    <body>
        <div class="ui menu">
            <div class="header item">
                Caplogik/SemanticUIBundle
            </div>

            <div class="left menu">
                <a class="item" href="{{ path('app.home.home') }}">Home</a>
                <a class="item" href="{{ path('app.home.installation') }}">Installation</a>
                <a class="item" href="{{ path('app.home.overview') }}">Overview</a>
            </div>

            <div class="right menu">
                <a class="item"> <i class="github icon"></i> Github</a>
            </div>
        </div>

        <div class="ui grid container">
            <div class="four wide column">
                {{ knp_menu_render('main') }}
            </div>
            <div class="twelve wide column">
                {% block body %}{% endblock %}
            </div>
        </div>

        {% block scripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
            <script>
                $(document).find('.ui.dropdown').dropdown();
            </script>
        {% endblock %}
    </body>
</html>
